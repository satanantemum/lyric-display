<div class="lyrics-player-container">
    <!-- File Upload Section -->
    <div class="file-upload-section">
        <div class="upload-group">
            <label for="audio-upload" class="upload-label">
                <i class="fas fa-file-audio"></i>
                Audio File: {{audioFileName}}
            </label>
            <input type="file" id="audio-upload" accept="audio/*" style="display: none;">
            <button type="button" class="upload-button" onclick="document.getElementById('audio-upload').click();">
                <i class="fas fa-upload"></i> Select Audio
            </button>
        </div>
        
        <div class="upload-group">
            <label for="lrc-upload" class="upload-label">
                <i class="fas fa-file-alt"></i>
                Lyrics File: {{lrcFileName}}
            </label>
            <input type="file" id="lrc-upload" accept=".lrc" style="display: none;">
            <button type="button" class="upload-button" onclick="document.getElementById('lrc-upload').click();">
                <i class="fas fa-upload"></i> Select LRC
            </button>
        </div>
    </div>

    <!-- Player Controls -->
    <div class="player-controls">
        <div class="control-row">
            <button id="play-pause" class="control-button {{#unless hasAudio}}disabled{{/unless}}" 
                    {{#unless hasAudio}}disabled{{/unless}}>
                {{#if isPlaying}}
                    <i class="fas fa-pause"></i>
                {{else}}
                    <i class="fas fa-play"></i>
                {{/if}}
            </button>
            
            <div class="time-display">
                <span class="current-time">{{formatTime currentTime}}</span>
                <span class="separator">/</span>
                <span class="total-time">{{formatTime duration}}</span>
            </div>
            
            <div class="volume-control">
                <i class="fas fa-volume-down"></i>
                <input type="range" id="volume-slider" min="0" max="1" step="0.1" value="{{volume}}">
                <i class="fas fa-volume-up"></i>
            </div>
        </div>
        
        <div class="progress-row">
            <input type="range" id="progress-slider" class="progress-slider" 
                   min="0" max="{{duration}}" step="0.1" value="{{currentTime}}"
                   {{#unless hasAudio}}disabled{{/unless}}>
        </div>
    </div>

    <!-- Lyrics Display -->
    <div class="lyrics-container">
        <div class="lyrics-display">
            <!-- Lyrics will be dynamically inserted here -->
            {{#unless hasAudio}}
                <div class="no-lyrics">
                    <i class="fas fa-music"></i>
                    <p>Select audio and lyrics files to begin</p>
                </div>
            {{/unless}}
        </div>
    </div>
</div>